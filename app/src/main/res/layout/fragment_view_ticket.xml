<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ui.compare.ViewTicketFragment">

        <TextView
            android:id="@+id/ticketComparisonHeadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="24sp"
            android:textColor="?attr/colorOnSecondary"
            android:text="@string/ticket_info" />

        <ImageView
            android:id="@+id/ticketComparisonResultImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Whether your ticket is cheaper or not" />

        <TextView
            android:id="@+id/ticketComparisonResultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="?attr/colorOnSecondary"
            android:text="@string/comparison_result_message" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textSize="18sp"
            android:textColor="?attr/colorOnSecondary"
            android:text="@string/other_tickets" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0, 1, 2">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/date1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:gravity="center"
                            android:layout_marginTop="30dp"
                            android:text="@string/not_available"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/time1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:gravity="center"
                            android:layout_marginTop="30dp"
                            android:text="@string/not_available"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/airline1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:gravity="center"
                            android:layout_marginTop="30dp"
                            android:text="@string/not_available"
                            android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/price1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:layout_column="2"
                            android:text="@string/not_available"
                            android:textColor="?attr/colorOnSecondary"
                            android:textSize="18sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/date2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:gravity="center"
                            android:layout_marginTop="30dp"
                            android:text="@string/not_available"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/time2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:gravity="center"
                            android:layout_marginTop="30dp"
                            android:text="@string/not_available"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/airline2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:gravity="center"
                            android:layout_marginTop="30dp"
                            android:text="@string/not_available"
                            android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/price2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="@string/not_available"
                            android:textColor="?attr/colorOnSecondary"
                            android:textSize="18sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/date3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:gravity="center"
                            android:layout_marginTop="30dp"
                            android:text="@string/not_available"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/time3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:gravity="center"
                            android:layout_marginTop="30dp"
                            android:text="@string/not_available"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/airline3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:gravity="center"
                            android:layout_marginTop="30dp"
                            android:text="@string/not_available"
                            android:textSize="18sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/price3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:layout_column="2"
                            android:text="@string/not_available"
                            android:textColor="?attr/colorOnSecondary"
                            android:textSize="18sp" />

                </TableRow>

        </TableLayout>


</LinearLayout>