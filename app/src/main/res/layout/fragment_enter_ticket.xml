<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EnterTicketFragment">

    <TextView
        android:id="@+id/enteTicketTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_details_title"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/departureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/departure"
        android:textSize="20sp"
        android:layout_marginTop="90dp"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/departure"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginTop="110dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/departureAtLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/at"
        android:textSize="20sp"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="60dp"/>

    <EditText
        android:id="@+id/departureAt"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginTop="160dp"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:id="@+id/destinationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/destination"
        android:textSize="20sp"
        android:layout_marginTop="240dp"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/destination"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginTop="260dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/destinationAtLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/at"
        android:textSize="20sp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="60dp"/>

    <EditText
        android:id="@+id/destinationAt"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginTop="310dp"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:id="@+id/classLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/class_label"
        android:textSize="20sp"
        android:layout_marginTop="390dp"
        android:layout_gravity="center_horizontal" />

    <Spinner
        android:id="@+id/classSpinner"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:entries="@array/plane_classes"
        android:layout_marginTop="420dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/stopsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stops"
        android:textSize="20sp"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="60dp"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="0dp"
        android:text="+"
        android:textSize="20dp"
        android:layout_marginTop="485dp"
        android:layout_marginLeft="320dp"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="80dp"
        android:text="@string/submit"/>

</FrameLayout>