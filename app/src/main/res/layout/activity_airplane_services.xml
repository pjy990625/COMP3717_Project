<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AirplaneServices">

    <ScrollView
        android:layout_width="330dp"
        android:layout_height="75dp"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="505dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ShopsExample1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/ShopsExample2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/shopsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duty Free Shop(s)"
        android:textSize="15dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="470dp" />

    <TextView
        android:id="@+id/AppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SaveAir"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/AirportNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Airport Name"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="68dp" />

    <ImageView
        android:id="@+id/AirportImage"
        android:layout_width="331dp"
        android:layout_height="228dp"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="107dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/AirportLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website Link"
        android:textSize="10dp"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="335dp" />

    <TextView
        android:id="@+id/LocationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="355dp" />

    <TextView
        android:id="@+id/Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location location location"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="394dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="413dp" />

    <TextView
        android:id="@+id/OthersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Others"
        android:textSize="15dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="592dp" />

    <ScrollView
        android:layout_width="330dp"
        android:layout_height="75dp"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="624dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/OthersExample1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/OthersExample2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>